<div class="banner banner-new-project" style="background-image: linear-gradient( rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1) ), url(<%=image_path('form-background2.jpeg')%>">
  <div class="container container-form">
    <div class="row">
      <div class="col-xs-12">
        <h1 class="form-title">If you film it, they will come.</h1>
      </div>
    </div>
    <hr class="line-shadow">
    <%= simple_form_for @project do |f| %>
      <div class="row">
        <div class="col-xs-6 center-text">
          <%= f.input :title, :input_html => {:placeholder => "Enter title here"}, :label => "Title" %>
        </div>
        <div class="col-xs-6 center-text">
          <%= f.input :genre, :input_html => {:placeholder => "Action, Comedy, Drama, etc."}, :label => "Genre" %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 center-text">
          <%= f.input :description, :input_html => {:placeholder => "Describe your project"}, :label => "Description" %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6 center-text">
          <%=f.input :schedule %>
        </div>
        <div class="col-xs-6 center-text">
          <%=f.input :location, :input_html => {:placeholder => "City"}, :label => "Location" %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <%= f.submit "Go To Project", class: 'wide-button btn btn-primary' %>
        </div>
      </div>
  </div>
  <% end %>
</div>
