<% projects_by_subject.each do |p| %>
	<div style="position: relative; display:flex-center;">
    <ul>
		  <%= link_to project_path(p.project) do %>
        <li>
          <div class="container project-card">
            <div class="row project-top">
              <div class="col-xs-9">
                <h2 class="text-left"><%= p.skill.title %></h2>
                <h4 class="text-left"><%= p.project.title %></h4>
              </div>
              <div class="col-xs-3">
                <div class="user-card-display text-center">
                  <%= image_tag 'avatar.jpg', crop: :fill, height: '50', width: '50', class: 'card-avatar' %>
                  <p>Host: <%= p.project.user.first_name %> <%= p.project.user.last_name %></p>
                </div>
              </div>
            </div>
            <div class="row project-middle">
              <div class="col-xs-4">
                <p class="text-left"><i class="fa fa-calendar" aria-hidden="true"></i> <%= p.project.schedule %></p>
              </div>
              <div class="col-xs-4">
                <p class="text-center"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= p.project.location %></p>
              </div>
              <div class="col-xs-4">
                <p class="text-right"><i class="fa fa-info-circle" aria-hidden="true"></i> <%= p.project.genre %></p>
              </div>
            </div>
          </div>
        </li>
        <hr class="thick-line">
		  <% end %>
    </ul>
	</div>
<% end %>
