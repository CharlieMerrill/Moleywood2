<div class="banner login-banner" style="background-image: url(<%=image_path('form-background3.jpeg')%>">
  <div class="container login-container">
    <h2>Welcome Back</h2>
    <hr class="line-shadow">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: "wide-button btn btn-primary" %>
    <% end %>
    <br>
    <br>
    <div class="devise-shared-links">
      <%= link_to "Sign up", new_registration_path(resource_name) %>
      <br>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <br>
      <a href=<%= user_facebook_omniauth_authorize_path %> class="fb-btn">
        <p><i class="fa fa-facebook-square"></i> Sign in with Facebook</p>
        <br>
        <br>
        <br>
      </a>
    </div>
  </div>
</div>
