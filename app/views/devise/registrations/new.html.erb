<div class="banner signup-banner" style="background-image: linear-gradient( rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2) ), url(<%=image_path('form-background.jpg')%>">
  <div class="container signup-container">
    <h2>Ready for your close-up?</h2>
    <hr class="line-shadow">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :first_name, required: true, autofocus: true %>
          </div>
          <div class="col-xs-6">
            <%= f.input :last_name, required: true, autofocus: true %>
          </div>
        </div>
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :password, hint_html: { class: 'password-min' }, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, required: true %>
        <div class="row">
          <div class="col-xs-4">
          </div>
          <div class="col-xs-4">
            <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
          </div>
          <div class="col-xs-4">
          </div>
        </div>
    <% end %>
    <br>
    <div class="devise-shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

