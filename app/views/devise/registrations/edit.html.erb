<div class="banner edit-banner" style="background-image: url(<%=image_path('form-background4.jpg')%>">
  <div class="container edit-container">
    <h2>Edit Profile</h2>
    <hr class="line-shadow">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :email, required: true, autofocus: true %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>
          <div class="col-xs-6">
            <%= f.input :location, placeholder: "City" %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :linkedin %>
          </div>
          <div class="col-xs-6">
            <%= f.input :facebook %>
          </div>
        </div>
        <%= f.input :profile_picture, as: :attachinary %>
        <%= f.input :bio, placeholder: "Tell other filmmakers about your experience, education, special skills, and equipment you can provide."%>
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :password, :label => "Change Your Password", autocomplete: "off", required: false %>
          </div>
          <div class="col-xs-6">
            <%= f.input :password_confirmation, :label => "Confirm New Password", required: false %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-xs-12">
            <%= f.button :submit, "Update", class: "wide-button btn btn-primary" %>
          </div>
        </div>
      <% end %>
    <br>
    <div class="devise-shared-links">
      <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure you want to leave your account on the cutting room floor?" }, method: :delete %></p>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
